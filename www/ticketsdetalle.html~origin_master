	<script type="text/javascript">
		app.initialize();
	</script>
	<script type="text/javascript">
	function getUrlVars() {
		var vars = {};
		var parts = window.location.href.replace(/[?&]+([^=&]+)=([^&]*)/gi, function(m,key,value) {
			vars[key] = value;
		});
		return vars;
	}
	var ticket = getUrlVars()["t"];
	var ruc = getUrlVars()["ruc"];
	$( "#regresar" ).attr( "href", "tickets.html?ruc=" + ruc );
	archivoValidacion = "http://starsoftservicios.com/aj/ajax/beta/detalle_ticketpend.php?jsoncallback=?"
	$.getJSON( archivoValidacion, {ticket:ticket})
	.done(function(respuestaServer){
		var html='';
		if(respuestaServer!=""){
			html=html+'<h3 class="txc-rojo">N° '+respuestaServer[0][2]+'</h3>';
			html=html+'<div class="item"><h4 class="txc-azul"><i class="fa fa-arrow-circle-o-right fa-lg"></i> Registro de Ticket</h4>';
			html=html+'<p><b>Fecha de registro:</b> '+respuestaServer[0][3]+'</p>';
			html=html+'<p><b>Asunto:</b> '+respuestaServer[0][15]+'</p>';
			html=html+'<p><b>Nombre de Contacto:</b> '+respuestaServer[0][11]+'</p>';
			html=html+'<p><b>Módulo:</b> '+respuestaServer[0][16]+'</p>';
			html=html+'<p><b>Descripción</b> '+respuestaServer[0][9]+'</p>';
			html=html+'</div>';
			html=html+'<div class="item">';
			html=html+'<h4 class="txc-azul"><i class="fa fa-arrow-circle-o-right fa-lg"></i> Asignación de ticket</h4>';
			html=html+'<p><b>Requerimiento Reportado:</b> '+respuestaServer[0][12]+'</p>';
			html=html+'<p><b>Analista designado:</b> '+respuestaServer[0][1]+'</p>';
			html=html+'<p><b>N° de Orden:</b> '+((respuestaServer[0][0]==0)?'Ya paso el turno, se llamará a la brevedad posible':respuestaServer[0][0])+'</p>';
			html=html+'</div>';
			$('#listaTicket').html(html);
		}else{
			//$('#horasdisp').html('<div align="center"><img src="images/starsoftmobile.png" height="120" style="width:100%;" /></div><hr>No cuenta con horas disponibles <br /><a href="#home" data-role="button" data-rel="back" data-icon="arrow-l" data-theme="b">Atras</a>');
		}
	})
	</script>
